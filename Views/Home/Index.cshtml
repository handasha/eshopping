@{
    ViewData["Title"] = "Home";
}

<div class="container text-center mt-5">
    <h1 class="display-4">Welcome to eShopping App</h1>
    <p class="lead">Discover amazing products and deals!</p>
    <div class="mt-4">
        <a class="btn btn-primary btn-lg" asp-controller="Account" asp-action="Login">Login</a>
        <a class="btn btn-secondary btn-lg" asp-controller="Account" asp-action="Register">Sign Up</a>
        <a class="btn btn-success btn-lg" asp-controller="Product" asp-action="Index">Shop Now</a>
    </div>
</div>

